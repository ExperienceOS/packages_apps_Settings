<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="op_control_text_style_base">
        <item name="android:breakStrategy">simple</item>
    </style>

    <style name="op_control_text_style_body1" parent="@style/op_control_text_style_base">
        <item name="android:textSize">13.0sp</item>
        <item name="android:fontFamily">@*android:string/config_bodyFontFamily</item>
    </style>

    <style name="op_control_text_style_h2" parent="@style/op_control_text_style_base">
	<item name="android:textSize">48.0sp</item>
	<item name="android:lineSpacingMultiplier">@dimen/op_line_space_multiplier_h2</item>
	<item name="android:fontFamily">@*android:string/config_headlineFontFamily</item>
    </style>

    <style name="op_control_text_style_h6" parent="@style/op_control_text_style_base">
        <item name="android:textSize">16.0sp</item>
        <item name="android:fontFamily">@*android:string/config_headlineFontFamilyMedium</item>
    </style>

    <style name="op_theme_customization_text_style" parent="@style/op_control_text_style_body1">
	<item name="android:textColor">@color/op_control_text_color_primary</item>
    </style>

    <style name="op_control_text_style_subtitle" parent="@style/op_control_text_style_base">
        <item name="android:textSize">13.0sp</item>
        <item name="android:fontFamily">@*android:string/config_lightFontFamily</item>
    </style>

    <style name="TextAppearance.ShapeShiftInfoTitle">
	<item name="android:textColor">?android:attr/textColorSecondary</item>
	<item name="android:textSize">12sp</item>
	<item name="android:textAllCaps">true</item>
	<item name="android:fontFamily">@*android:string/config_bodyFontFamilyMedium</item>
    </style>

    <style name="TextAppearance.ShapeShiftInfoSummary">
	<item name="android:textColor">?android:attr/textColorPrimary</item>
	<item name="android:textSize">12.5sp</item>
	<item name="android:lineSpacingMultiplier">1.3</item>
	<item name="android:fontFamily">@*android:string/config_bodyFontFamily</item>
    </style>

    <style name="homepage_spacer_title_style">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">?android:attr/colorControlNormal</item>
        <item name="android:fontFamily">@*android:string/config_headlineFontFamily</item>
    </style>
</resources>
